<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yashraj.glavage.student.MainActivity"
    android:background="@color/background"
    >
    <ImageView
        android:id="@+id/glavation_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/group_1"
        android:layout_marginTop="50dp"
        />
    <ImageView
        android:src="@drawable/vector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"/>
    <ImageView
        android:layout_marginTop="100dp"
        android:src="@drawable/vector2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"/>
    <ImageView
        android:src="@drawable/charco_pet_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/student_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:foregroundTint="@color/white"
        android:text="Login As GlaVaasi!"
        android:textColor="@color/purple_200"
        app:backgroundTint="#FFFFFF"
        app:iconTint="#FFFFFF">

    </Button>

    <Button
        android:id="@+id/dhobi_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/student_button"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:foregroundTint="@color/white"
        android:text="Login As Dhobi!"
        android:textColor="@color/purple_200"
        app:backgroundTint="#FFFFFF"
        app:iconTint="#FFFFFF">

    </Button>


</RelativeLayout>